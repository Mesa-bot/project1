<mvc:View controllerName="project1.controller.home"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <content>
            <VBox class="sapUiSmallMargin">
            <Input placeholder="Enter a task..." id="idTaskInput" width="40%"></Input>
            <Button text="Add Task... " press=".onAddTask"></Button>
            </VBox>
            <List id="idTaskList" items="{/tasks}">
               <StandardListItem title="{task}" class="{= ${completed} ? 'taskCompleted' : '' }" />
            </List>
        </content>
    </Page>
</mvc:View>